      <div class="createPost">
        <form action="/createPost" method="post" enctype="multipart/form-data">
          <h2>Create New Post Picture or Video</h2>
          <div class="postImgCircle">
            <div class="postStateImg">
              <img src="assets/logo.png" alt="" />
            </div>

            <button class="uploadPostPic"><i class="ri-pencil-fill"></i></button>
          </div>

          <input id="postImage" type="file" name="postImage" accept="image/*" />
          <input type="text" placeholder="title" name="title" autocomplete="off" />
          <input type="text" placeholder="Description" name="description" autocomplete="off" />

