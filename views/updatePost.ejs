  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

  <script>
    var swiper = new Swiper(".mySwiper", {
      slidesPerView: 3,
      spaceBetween: 30,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
    });

    let times = document.querySelector('.times');
    let leftNav = document.querySelector('.leftNav');
    let rightArrow = document.querySelector('.rightArrow');
    times.addEventListener('click', function () {
      leftNav.style.width = "0px"
    })

    rightArrow.addEventListener('click', function () {
      leftNav.style.width = "250px"
    })

    leftNav.addEventListener('blur', function (e) {
      leftNav.style.width = "0px"
    })
    let imgPost = document.querySelector("#postImage");
    let postImgCircle = document.querySelector(".postImgCircle img");

    imgPost.addEventListener("change", function () {
      let imgFile = imgPost.files[0];
      postImgCircle.src = URL.createObjectURL(imgFile);
    });

    let uploadPostPic = document.querySelector('.uploadPostPic');
    uploadPostPic.addEventListener('click', function () {
      imgPost.click();
    })
  </script>

