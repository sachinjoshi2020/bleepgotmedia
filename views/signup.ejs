<%- include('partial/header') %>
<section class="mainIndex">
  <form action="/register" method="post" class="loginSet">
    <div class="innerAnimation"></div>
    <div class="innerDiv">
      <div class="logoSet">
        <img src="assets/logo.png" alt="logo" />
        <h2>Signup</h2>
      </div>

      <hr class="hrForm" />

      <div class="formControl">
        <label for="user">Username</label>
        <input type="text" placeholder="username" id="user" name="username" />
      </div>
      <div class="formControl">
        <label for="email">Email</label>
        <input type="email" placeholder="email" id="email" name="email" />
      </div>
      <div class="formControl">
        <label for="password">Password</label>
        <input
          type="password"
          placeholder="password"
          id="password"
          name="password"
        />
      </div>
      <div class="submitRate">
        <button>Signup</button>
        <p>Already Have An Account? <a href="/">Click Here!</a></p>
      </div>
    </div>
  </form>
</section>
<%- include('partial/footer') %>
