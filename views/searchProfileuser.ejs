<%- include('partial/header') %>

<div class="mainContainer">
  <button class="rightArrow"><i class="ri-arrow-right-s-line"></i></button>
  <div class="leftNav">
    <button class="times"><i class="ri-close-line"></i></button>

    <a class="updatePostSet" href="/profile">
      <i class="ri-home-2-line"></i>Home</a
    >

    <a class="updatePostSet" href="/updatePost">
      <i class="ri-upload-cloud-2-line"></i> Upload Picture</a
    >

    <a class="updatePostSet" href="/updateReel">
      <i class="ri-upload-cloud-2-line"></i> Upload Reel</a
    >

    <a class="updatePostSet" href="/myPosts"
      ><i class="ri-image-2-fill"></i> My Stuff</a
    >

    <a class="updatePostSet" href="/reels"
      ><i class="ri-video-line"></i> Reels</a
    >
    <a class="updatePostSet" href="/myprofile"
      ><i class="ri-user-line"></i> My Profile</a
    >

    <a class="updatePostSet" href=""><i class="ri-star-line"></i> My Fev</a>
    <a class="updatePostSet" href=""
      ><i class="ri-notification-3-fill"></i>Notifation</a
    >

    <a class="updatePostSet" href="">
      <i class="ri-history-line"></i> Recent Posts</a
    >
    <a class="updatePostSet" href="">
      <i class="ri-share-fill"></i> Share Profile</a
    >
    <a class="updatePostSet" href="/payment">
      <i class="ri-money-dollar-circle-line"></i> Payment</a
    >
    <a class="updatePostSet" href="/setting">
      <i class="ri-settings-2-line"></i>Settings</a
    >

    <a class="logoutSet" a href="/logout"
      ><i class="ri-logout-box-line"></i> Logout</a
    >
  </div>

  <div class="flex flex-col w-full items-center gap-8 p-10 px-20">
    <div class="profileheader flex w-full items-center flex-col gap-8">
      <div class="flex flex-col items-center justify-center relative w-[200px]">
        <img
          src="<%= user.profileImage? 'uploads/' + user.profileImage : 'https://cdn-icons-png.flaticon.com/512/149/149071.png' %>"
          alt=""
          class="w-[140px] h-[140px] object-cover rounded-full border-2 p-2 border-zinc-600"
        />
        <button
          class="absolute z-99 w-[40px] h-[40px] bg-white text-black rounded-full bottom-0 right-[29px]"
        >
          <i class="ri-pencil-line"></i>
        </button>
      </div>

      <h2 class="text-white text-center text-3xl capitalize">
        Welcome <%= user.username %>
        <br />
        <small class="text-yellow-500" style="font-size: 1rem"
          >Followers : 90K</small
        >
      </h2>

      <div class="flex justify-center mt-4">
        <button
          class="bg-blue-500 text-white font-medium rounded-md px-10 py-4 hover:bg-blue-600 transition duration-200"
        >
          Edit Profile
        </button>
      </div>

      <p class="text-center text-white opacity-60" style="letter-spacing: 1px">
        <q>
          Unleash Your Creativity with Our Photo Uploading Platform! Capture and
          share your memories effortlesslyâ€”join our vibrant community and
          transform your snapshots into stunning galleries today!</q
        >
      </p>
    </div>

    <div class="bodyProfile w-full">
      <form
        method="get"
        action="/searchResultuser"
        class="flex items-center w-full sticky top-0 z-99"
      >
        <input
          type="text"
          name="searchq"
          class="w-full text-white border-gray-800 bg-gray-600 rounded-l-lg p-2 focus:outline-none focus:ring-2 focus:ring-blue-100"
          placeholder="Search Users"
        />
        <button
          class="w-[160px] cursor-pointer bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-r-lg p-2 hover:from-blue-600 hover:to-purple-600"
        >
          Search
        </button>
      </form>

      <div class="mt-10">
        <% if (result.length > 0) { %>
        <ul class="space-y-4">
          <% result.forEach(item => { %>
          <li
            class="flex items-center gap-10 p-4 border-b-2 border-slate-700 text-white"
          >
            <img
              src="<%= item.profileImage? 'uploads/' + item.profileImage : 'https://cdn-icons-png.flaticon.com/512/149/149071.png' %>"
              alt="Item 1"
              class="mr-4 rounded-full w-10 h-10 object-cover border-2 border-gray-800"
            />
            <div class="flex-1">
              <h2 class="text-sm font-medium"><%= item.username %></h2>
              <span class="text-green-500 text-sm">Active</span>
            </div>

            <button
              class="w-[160px] cursor-pointer bg-gradient-to-r from-blue-100 to-purple-200 text-black font-medium rounded-md p-2 hover:from-blue-600 hover:to-purple-300 hover:text-white"
            >
              Follow +
            </button>
          </li>
          <% }) %>
        </ul>
        <% } else { %>
        <p class="text-center text-white font-medium ">No results found for "<%= searchQuery %>".</p>
        <% } %>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  var swiper = new Swiper(".mySwiper", {
    slidesPerView: 3,
    spaceBetween: 30,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
  });

  let times = document.querySelector(".times");
  let leftNav = document.querySelector(".leftNav");
  let rightArrow = document.querySelector(".rightArrow");
  times.addEventListener("click", function () {
    leftNav.style.width = "0px";
  });

  rightArrow.addEventListener("click", function () {
    leftNav.style.width = "280px";
  });

  leftNav.addEventListener("blur", function (e) {
    leftNav.style.width = "0px";
  });
</script>

<%- include('partial/footer') %>
