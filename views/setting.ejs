<%- include('partial/header') %>

<div class="mainContainer">
  <section class="w-full flex justify-between gap-10 p-7">

    <div class="w-[100%]">
      <div class="w-full flex items-center justify-between mb-3">
        <div class="userDetails_setting flex text-white gap-2 items-center">
          <img
            src="<%= 'uploads/' + user.profileImage %>"
            alt="<%= user.profileImage %>"
            class="w-[60px] h-[60px] border-2 p-[2px] border-slate-600 object-cover rounded-full"
          />
          <h3 class="flex flex-col">
            <%= user.username%>
            <small class="opacity-60"
              >Last Edit <span id="dateStore"></span>
            </small>
          </h3>
        </div>

        <div class="btnGroupsElements flex gap-5">
          <button class="bg-blue-800 rounded-full w-10 h-10 text-white">
            <i class="ri-pencil-line"></i>
          </button>
          <button class="deleteAccount text-red-600" disabled>
            <i class="ri-delete-bin-line"></i>
          </button>
          <button class="w-10 h-10 text-white">
            <i class="ri-more-line"></i>
          </button>
        </div>
      </div>
      <hr class="opacity-30" />

      <h1 class="text-white bg-neutral-700 rounded-sm p-2 text-3xl mt-3">
        Notification
      </h1>

      <div class="mt-3 flex flex-col gap-2">
        <div class="testmonials text-white flex gap-5 relative flex-col">
          <div class="flex items-center gap-5 relative">
            <div class="w-[10px] h-[10px] bg-neutral-700 rounded-full"></div>
            <small class="text-red-200"><b> Allowed Notification</b></small>
            <button class="showContentBtn absolute right-2">
              <i class="ri-add-line"></i>
            </button>
          </div>
          <div
            class="absolute w-[2px] h-full bg-neutral-700 top-3 left-1"
          ></div>
          <div class="ms-8">
            <div class="allowed flex items-center gap-5">
             <b>   Enable Notification</b>
                <input type="checkbox" class="enchcked" checked>
            </div>
            <p class="opacity-60 mt-3" style="font-size: .9rem;">The intent behind these popups is to motivate them to take a particular action, such as subscribing to a newsletter or making a purchase.</p>
          </div>
        </div>


        <h1 class="text-white bg-neutral-700 rounded-sm p-2 text-3xl mt-3">
          Payment Marchent
        </h1>


        <div class="text-white flex gap-5 relative flex-col">
          <div class="flex items-center gap-5 relative">
            <div class="w-[10px] h-[10px] bg-neutral-700 rounded-full"></div>
            <small class="text-red-200"><b> Payment Activity Status</b></small>
            <!-- <button class="showContentBtn absolute right-2">
              <i class="ri-add-line"></i>
            </button> -->
          </div>
          <div
            class="absolute w-[2px] h-full bg-neutral-700 top-3 left-1"
          ></div>
          <div class="ms-8">
            <div class="allowed flex items-center gap-5">
             <b>   Payment Enable</b>
                <input type="checkbox" class="enchcked" checked>
            </div>
            <p class="opacity-60 mt-3" style="font-size: .9rem;">The intent behind these popups is to motivate them to take a particular action, such as subscribing to a newsletter or making a purchase.</p>
          </div>
        </div>


        <h1 class="text-white bg-neutral-700 rounded-sm p-2 text-3xl mt-3">
          User Prefreance
        </h1>

        
        <div class="text-white flex gap-5 relative flex-col">
          <div class="flex items-center gap-5 relative">
            <div class="w-[10px] h-[10px] bg-neutral-700 rounded-full"></div>
            <small class="text-red-200"><b> user's profile setting</b></small>
            <!-- <button class="showContentBtn absolute right-2">
              <i class="ri-add-line"></i>
            </button> -->
          </div>
          <div
            class="absolute w-[2px] h-full bg-neutral-700 top-3 left-1"
          ></div>
          <div class="ms-8">
            <div class="allowed flex items-center gap-5">
             <b>  LightMode Enable</b>
                <input type="checkbox" class="enchcked" checked>
            </div>
            <p class="opacity-60 mt-3" style="font-size: .9rem;">Enable light mode for a brighter, more vibrant experience.</p>
          </div>
          <div class="ms-8">
            <div class="allowed flex items-center gap-5">
             <b>  Large Fonts</b>
                <input type="checkbox" class="enchcked" checked>
            </div>
            <p class="opacity-60 mt-3" style="font-size: .9rem;">Enable large font for better readability.</p>
          </div>
          <div class="ms-8">
            <div class="allowed flex items-center gap-5">
             <b>  Disable Download Button</b>
                <input type="checkbox" class="enchcked" checked>
            </div>
            <p class="opacity-60 mt-3" style="font-size: .9rem;">Disable downloads to prevent content from being saved.</p>
          </div>
          <div class="ms-8">
            <div class="allowed flex items-center gap-5">
             <b>  Disable Likes</b>
                <input type="checkbox" class="enchcked" checked>
            </div>
            <p class="opacity-60 mt-3" style="font-size: .9rem;">Disable likes to hide interaction on your posts.</p>
          </div>
          <div class="ms-8">
            <div class="allowed flex items-center gap-5">
             <b>  Disable Followers</b>
                <input type="checkbox" class="enchcked" checked>
            </div>
            <p class="opacity-60 mt-3" style="font-size: .9rem;">Disable followers to prevent others from following your account.</p>
          </div>
          <div class="ms-8">
            <div class="allowed flex items-center gap-5">
             <b>  Change Password</b>
                <input type="text" class="enchcked mt-2 " style="background: transparent; border: 0;" value="* * * *">
            </div>
            <p class="opacity-60 mt-3" style="font-size: .9rem;">Change your password to enhance account security.</p>
          </div>
          <div class="ms-8">
            <div class="allowed flex items-center gap-5">
             <b>  Complete profile</b>
              <i class="ri-arrow-right-line"></i>
            </div>
            <p class="opacity-60 mt-3" style="font-size: .9rem;">Complete your profile to unlock all features and personalize your experience.</p>
          </div>
        </div>

      </div>
      <button disabled  style="margin-top: 60px;" class="btn opacity-30 bg-red-500 w-[86%] left-10 rounded-md text-white h-10"> <i class="ri-delete-bin-line"></i>  Remove Account</button>

    </div>
  </section>
</div>

<script>
  let dateStore = (document.querySelector("#dateStore").innerHTML =
    new Date().toLocaleDateString());

  let deleteAccount = document.querySelector(".deleteAccount");
  deleteAccount.addEventListener("click", function () {
    Swal.fire({
      title: "Are you sure?",
      text: "for this account delete!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, delete it!",
    }).then((result) => {
      if (result.isConfirmed) {
        Swal.fire({
          title: "Deleted!",
          text: "Account Deleted.",
          icon: "success",
        });
      }
    });
  });

  let showContentBtn = document.querySelector(".showContentBtn");
  showContentBtn.addEventListener("click", function () {
    document.querySelector(".testmonials").classList.toggle("showMainContent");
  });
</script>

<%- include('partial/footer') %>
