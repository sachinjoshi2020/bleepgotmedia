<%- include('partial/header') %>
<section class="mainIndex">
  <form action="/login" method="post" class="loginSet">
    <div class="innerAnimation"></div>
    <div class="innerDiv">
      <div class="logoSet">
        <img src="assets/logo.png" alt="logo" />
        <h2>Login</h2>
      </div>

      <hr class="hrForm" />

      <div class="formControl">
        <label for="user">Username</label>
        <input type="text" placeholder="username" id="user" name="username" />
      </div>
      <div class="formControl">
        <label for="password">Password</label>
        <input
          type="password"
          placeholder="password"
          id="password"
          name="password"
        />
      </div>
      <div class="submitRate">
        <p><a href="#">Forgot Password?</a></p>
        <button>login</button>
        <p>Create New Account? <a href="/signup">Click Here!</a></p>
      </div>
    </div>
  </form>
</section>
<%- include('partial/footer') %>
